<div class="max-w-6xl my-10 mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2">
    {% if section.settings.selected_image != blank %}
      <div class="relative w-full h-[400px] flex justify-start items-start mt-10 z-0">
        <img
          src="{{ section.settings.selected_image | image_url: "master" }}"
          loading="lazy"
          width="auto"
          height="autoclear"
          class="w-[90%] h-full object-cover opacity-90"
        >
      </div>
    {% else %}
      <div class="w-full h-[400px] flex justify-start items-start mt-10 z-0 ">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'w-[90%] h-[70%] object-center rounded-lg' }}
      </div>
    {% endif %}

    <div class="flex flex-col justify-start items-start w-full h-full">
      {% if section.settings.product_title != blank %}
        <h1 class="text-3xl font-mono my-5 text-textColor2 text-left">{{ section.settings.product_title }}</h1>
      {% else %}
        <h1 class="text-3xl font-mono my-5 text-textColor2 text-left">Product Title Placeholder</h1>
      {% endif %}

      {% if section.settings.product_title != blank %}
        <p class="my-5 font-sans indent-8">{{ section.settings.product_description }}</p>
      {% else %}
        <p class="my-5 font-sans indent-8">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Amet, quos! Voluptate voluptatibus nostrum ut
          facilis provident qui ullam rerum veniam! Quia nostrum tenetur repellat corrupti commodi recusandae
          perspiciatis deserunt dolore.
        </p>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Product",
  "class": "image-for-homepage",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "label": "Pick Your Image",
      "id": "selected_image"
    },
    {
      "type": "text",
      "label": "Product Description",
      "id": "product_title"
    },
    {
      "type": "textarea",
      "label": "Product Description",
      "id": "product_description"
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "category": "product"
    }
  ]
}
{% endschema %}
